<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Design">

        <ListPreference
                android:defaultValue="1"
                android:entries="@array/theme_entries"
                android:entryValues="@array/theme_values"
                android:key="theme"
                android:title="Theme" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Data">

        <SwitchPreference
                android:defaultValue="false"
                android:key="crashlytics"
                android:summary="Whether reporting via crashlytics is enabled (requires restart)"
                android:title="Crashlytics" />
    </PreferenceCategory>

</PreferenceScreen>
